<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Ecommerce</title>
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
        crossorigin="anonymous"
    />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <link rel="stylesheet" href="./css/style.css">
</head>
<body>
    <header>
        {{> navbar}}
    </header>
    <main class="container-fluid">
        <h1 class="h1 my-4 text-primary text-center">Formulario y Chat con WebSocket</h1>
        <section class="section__bienvenida section">
            {{#if user }}
                <div class="container-fluid my-4 flex__center">
                    <h3 class="alert-success rounded p-3">Bienvenido {{user.name}}</h3>  
                    <img src="{{user.avatar}}" alt="" class="img">
                </div>
                {{else}}
                <h3 class="alert-success rounded p-3">Bienvenido </h3>  
            {{/if}}
            <form method="POST">
                <a href="/logout" class="my-4 container-fluid">
                    <button type="submit" class="btn btn-dark">Cerrar sesi贸n</button>
                    <div id="logout"></div>
                </a>            
            </form>
        </section>
        
        <div>
            <h2 class="text-primary mt-4 text-center">Ingrese datos</h2>
            <!-- <form action="/productos" method="post">  -->
            <form onsubmit="return addProduct(this)" class="section">
                <div class="mb-3 ">
                    <label for="title" class="form-label my-2" >Nombre del producto</label>
                    <input type="text" class="form-control" name="title" placeholder="Nombre del producto" id="title"/>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label my-2">Precio del producto</label>
                    <input type="number" class="form-control" name="price" placeholder="Precio del producto" id="price"/>
                </div>
                <div class="mb-3">
                    <label for="thumbnail" class="form-label my-2">Link foto del producto</label>
                    <input type="url" class="form-control" name="thumbnail" placeholder="Link de imagen producto" id="thumbnail"/>
                </div>
                <div class="mb-3">
                    <label for="code" class="form-label my-2">C贸digo del producto</label>
                    <input type="text" class="form-control" name="code" placeholder="C贸digo producto" id="code"/>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label my-2">Descripci贸n del producto</label>
                    <input type="text" class="form-control" name="description" placeholder="Descripci贸n del producto" id="description"/>
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label my-2">Categor铆a del producto</label>
                    <input type="text" class="form-control" name="category" placeholder="Categor铆a" id="category"/>
                </div>
                <div class="mb-3">
                    <label for="stock" class="form-label my-2">Stock del producto</label>
                    <input type="number" min="0" class="form-control" name="stock" placeholder="Stock" id="stock"/>
                </div>
                <button type="submit" class="btn btn-dark">Cargar producto</button>
            </form>
        </div>
        <div class="col my-4">
            <h3 class="text-primary h3 text-center">Tabla de productos</h3>
            <div id="list" class="section__tablaProductos">
            </div>
        </div>
    </main>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js"></script>
    <script src="../js/admin.js"></script>
</body>
</html>